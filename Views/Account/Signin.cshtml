@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Sign In</h2>
                    
                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Count > 0)
                    {
                        <div class="alert alert-danger" role="alert">
                            @foreach (var modelState in ViewData.ModelState.Values)
                            {
                                @foreach (var error in modelState.Errors)
                                {
                                    <p>@error.ErrorMessage</p>
                                }
                            }
                        </div>
                    }

                    <form method="post" asp-action="Signin" asp-controller="Account">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" name="email" id="email" class="form-control form-control-lg" placeholder="Enter your email" required />
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" name="password" id="password" class="form-control form-control-lg" placeholder="Enter password" required />
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
                        </div>

                        <p class="text-center mt-3">
                            Don't have an account? <a asp-action="Signup" asp-controller="Account" class="text-decoration-none">Sign Up</a>
                        </p>

                        <div class="alert alert-info mt-3" role="alert">
                            <strong>Demo Credentials:</strong><br/>
                            Email: admiranda@sscgi.com<br/>
                            Password: M!rand@22
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
