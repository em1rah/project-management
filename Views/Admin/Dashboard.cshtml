@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <!-- Header Section -->
    <div class="page-header">
        <h1 class="display-6 fw-bold text-dark mb-2">Dashboard</h1>
        <p class="text-muted">Welcome back! Here's your overview.</p>
    </div>
    <!-- Statistics Cards -->
    <div class="row mb-4 g-3">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 stat-card" style="border-left: 4px solid #667eea;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 fw-semibold text-uppercase small">Total Users</p>
                            <h2 class="fw-bold mb-0" style="color: #667eea;">@ViewBag.TotalUsers</h2>
                        </div>
                        <div style="font-size: 2.5rem; opacity: 0.3;">üë•</div>
                    </div>
                    <small class="text-muted d-block mt-3">
                        <span class="badge bg-light text-dark">+@(ViewBag.TotalUsers > 0 ? ViewBag.TotalUsers : "0")</span> this month
                    </small>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 stat-card" style="border-left: 4px solid #28a745;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 fw-semibold text-uppercase small">Cert. Interested</p>
                            <h2 class="fw-bold mb-0" style="color: #28a745;">@ViewBag.CertificationInterested</h2>
                        </div>
                        <div style="font-size: 2.5rem; opacity: 0.3;">‚úÖ</div>
                    </div>
                    <div class="progress mt-3" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width: @(ViewBag.TotalUsers > 0 ? (ViewBag.CertificationInterested * 100 / ViewBag.TotalUsers) : 0)%; background: #28a745;"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 stat-card" style="border-left: 4px solid #dc3545;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 fw-semibold text-uppercase small">Not Interested</p>
                            <h2 class="fw-bold mb-0" style="color: #dc3545;">@ViewBag.CertificationNotInterested</h2>
                        </div>
                        <div style="font-size: 2.5rem; opacity: 0.3;">‚ùå</div>
                    </div>
                    <div class="progress mt-3" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width: @(ViewBag.TotalUsers > 0 ? (ViewBag.CertificationNotInterested * 100 / ViewBag.TotalUsers) : 0)%; background: #dc3545;"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100 stat-card" style="border-left: 4px solid #0dcaf0;">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-muted mb-2 fw-semibold text-uppercase small">Conversion</p>
                            <h2 class="fw-bold mb-0" style="color: #0dcaf0;">@(ViewBag.TotalUsers > 0 ? Math.Round(ViewBag.CertificationInterested * 100.0 / ViewBag.TotalUsers, 1) : 0)%</h2>
                        </div>
                        <div style="font-size: 2.5rem; opacity: 0.3;">üìà</div>
                    </div>
                    <small class="text-muted d-block mt-3">of users interested</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row mb-4 g-3">
        <!-- Certification Pie Chart -->
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient p-4" style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);">
                    <h5 class="text-white mb-0 fw-bold">
                        <span style="font-size: 1.3rem; margin-right: 0.5rem;">üéØ</span>
                        Certification Interest Distribution
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div style="position: relative; height: 300px;">
                        <canvas id="certificationChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Roles Chart -->
        <div class="col-xl-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-gradient p-4" style="background: linear-gradient(90deg, #0dcaf0 0%, #0d6efd 100%);">
                    <h5 class="text-white mb-0 fw-bold">
                        <span style="font-size: 1.3rem; margin-right: 0.5rem;">üëî</span>
                        User Roles Distribution
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div style="position: relative; height: 300px;">
                        <canvas id="rolesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Courses Chart -->
    <div class="row mb-4 g-3">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient p-4" style="background: linear-gradient(90deg, #28a745 0%, #20c997 100%);">
                    <h5 class="text-white mb-0 fw-bold">
                        <span style="font-size: 1.3rem; margin-right: 0.5rem;">üìö</span>
                        Course Interest Distribution
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div style="position: relative; height: 350px;">
                        <canvas id="coursesChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Certification Chart
            try {
                const certCtx = document.getElementById('certificationChart');
                if (certCtx) {
                    const certChart = new Chart(certCtx, {
                        type: 'doughnut',
                        data: {
                            labels: ['Interested in Certification', 'Not Interested'],
                            datasets: [{
                                data: [@ViewBag.CertificationInterested, @ViewBag.CertificationNotInterested],
                                backgroundColor: [
                                    '#28a745',
                                    '#dc3545'
                                ],
                                borderColor: '#fff',
                                borderWidth: 3,
                                hoverOffset: 10
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'bottom',
                                    labels: {
                                        font: { size: 13, weight: 'bold' },
                                        padding: 20,
                                        usePointStyle: true
                                    }
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                            const percentage = Math.round((context.parsed * 100) / total);
                                            return context.label + ': ' + context.parsed + ' (' + percentage + '%)';
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            } catch(e) {
                console.error('Error initializing certification chart:', e);
            }

            // Roles Chart
            try {
                const roles = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.RoleDistribution ?? new List<object>(), new System.Text.Json.JsonSerializerOptions { PropertyNamingPolicy = null }));
                console.log('Roles data:', roles);
                if (roles && roles.length > 0) {
                    const roleLabels = roles.map(r => r.Role);
                    const roleCounts = roles.map(r => r.Count);

                    const rolesCtx = document.getElementById('rolesChart');
                    if (rolesCtx) {
                        const rolesChart = new Chart(rolesCtx, {
                            type: 'bar',
                            data: {
                                labels: roleLabels,
                                datasets: [{
                                    label: 'Number of Users',
                                    data: roleCounts,
                                    backgroundColor: [
                                        '#667eea',
                                        '#764ba2',
                                        '#0dcaf0',
                                        '#28a745',
                                        '#ffc107'
                                    ],
                                    borderColor: '#fff',
                                    borderWidth: 2,
                                    borderRadius: 8
                                }]
                            },
                            options: {
                                indexAxis: 'y',
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: {
                                        display: true,
                                        labels: { font: { size: 13, weight: 'bold' }, padding: 15 }
                                    },
                                    tooltip: {
                                        backgroundColor: 'rgba(0,0,0,0.8)',
                                        padding: 12,
                                        titleFont: { size: 13, weight: 'bold' },
                                        bodyFont: { size: 12 }
                                    }
                                },
                                scales: {
                                    x: {
                                        beginAtZero: true,
                                        ticks: { font: { size: 12 } },
                                        grid: { color: 'rgba(0,0,0,0.05)' }
                                    },
                                    y: {
                                        ticks: { font: { size: 12, weight: '500' } },
                                        grid: { display: false }
                                    }
                                }
                            }
                        });
                    }
                }
            } catch(e) {
                console.error('Error initializing roles chart:', e);
            }

            // Courses Chart
            try {
                const courses = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(ViewBag.Courses ?? new Dictionary<string, int>()));
                console.log('Courses data:', courses);
                if (courses && Object.keys(courses).length > 0) {
                    const courseLabels = Object.keys(courses);
                    const courseCounts = Object.values(courses);

                    const coursesCtx = document.getElementById('coursesChart');
                    if (coursesCtx) {
                        const coursesChart = new Chart(coursesCtx, {
                            type: 'bar',
                            data: {
                                labels: courseLabels,
                                datasets: [{
                                    label: 'Number of Registrations',
                                    data: courseCounts,
                                    backgroundColor: '#28a745',
                                    borderColor: '#20c997',
                                    borderWidth: 2,
                                    borderRadius: 8
                                }]
                            },
                            options: {
                                responsive: true,
                                maintainAspectRatio: false,
                                indexAxis: 'x',
                                plugins: {
                                    legend: {
                                        display: true,
                                        labels: { font: { size: 13, weight: 'bold' }, padding: 15 }
                                    },
                                    tooltip: {
                                        backgroundColor: 'rgba(0,0,0,0.8)',
                                        padding: 12,
                                        titleFont: { size: 13, weight: 'bold' },
                                        bodyFont: { size: 12 }
                                    }
                                },
                                scales: {
                                    x: {
                                        ticks: { font: { size: 12, weight: '500' } },
                                        grid: { color: 'rgba(0,0,0,0.05)' }
                                    },
                                    y: {
                                        beginAtZero: true,
                                        ticks: { font: { size: 12 } },
                                        grid: { color: 'rgba(0,0,0,0.05)' }
                                    }
                                }
                            }
                        });
                    }
                }
            } catch(e) {
                console.error('Error initializing courses chart:', e);
            }
        });
    </script>

    <style>
        .stat-card {
            transition: all 0.3s ease;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 0.5rem 1.5rem rgba(0, 0, 0, 0.15) !important;
        }
        .bg-gradient {
            background-size: 200% 200%;
        }
    </style>
}