@model List<trainee_projectmanagement.Models.User>

@{
    ViewData["Title"] = "User Management";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div>
    <!-- Header Section -->
    <div class="page-header">
        <h1 class="display-6 fw-bold text-dark mb-2">User Management</h1>
        <p class="text-muted">Total: <strong>@Model.Count</strong> users registered</p>
    </div>

    <!-- Users Table -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient p-4" style="background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);">
                    <h5 class="text-white mb-0 fw-bold">üìã User Details</h5>
                </div>
                
                @if (Model.Count == 0)
                {
                    <div class="card-body text-center py-5">
                        <div style="font-size: 3rem; margin-bottom: 1rem; opacity: 0.5;">üì≠</div>
                        <p class="text-muted fs-5">No users registered yet</p>
                        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-primary mt-3">Go to Dashboard</a>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead style="background-color: #f8f9fa; border-bottom: 2px solid #e9ecef;">
                                <tr>
                                    <th class="fw-bold text-dark">Full Name</th>
                                    <th class="fw-bold text-dark">Email</th>
                                    <th class="fw-bold text-dark">School</th>
                                    <th class="fw-bold text-dark">Role</th>
                                    <th class="fw-bold text-dark">Courses</th>
                                    <th class="fw-bold text-dark">Certification</th>
                                    <th class="fw-bold text-dark">Registered</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model)
                                {
                                    <tr style="border-bottom: 1px solid #e9ecef;">
                                        <td>
                                            <strong class="text-dark">@user.FullName</strong>
                                        </td>
                                        <td>
                                            <span class="text-muted small">@user.Email</span>
                                        </td>
                                        <td>
                                            <span class="text-dark">@user.SchoolAttended</span>
                                        </td>
                                        <td>
                                            <span class="badge bg-primary fw-bold">@user.Role</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.CoursesInterested))
                                            {
                                                @foreach (var course in user.CoursesInterested.Split(","))
                                                {
                                                    <span class="badge bg-secondary me-1 mb-1">@course.Trim()</span>
                                                }
                                            }
                                            else
                                            {
                                                <span class="text-muted small">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (user.InterestedInCertification)
                                            {
                                                <span class="badge bg-success fw-bold">‚úÖ Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger fw-bold">‚ùå No</span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @user.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                            </small>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f8f9fa !important;
        transition: all 0.2s ease;
    }

    .badge {
        font-weight: 600;
        padding: 0.5rem 0.75rem;
    }
</style>
