@model List<trainee_projectmanagement.Models.User>

@{
    ViewData["Title"] = "Users List";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-12">
            <h1 class="display-5">Registered Users</h1>
            <p class="text-muted">Total: @Model.Count users</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-12">
            <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-secondary">Back to Dashboard</a>
            <a href="@Url.Action("Logout", "Account")" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-primary">
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>School</th>
                                <th>Role</th>
                                <th>Courses</th>
                                <th>Certification</th>
                                <th>Registered</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count == 0)
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">No users registered yet</td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var user in Model)
                                {
                                    <tr>
                                        <td><strong>@user.FullName</strong></td>
                                        <td>@user.Email</td>
                                        <td>@user.SchoolAttended</td>
                                        <td>
                                            <span class="badge bg-info">@user.Role</span>
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(user.CoursesInterested))
                                            {
                                                @foreach (var course in user.CoursesInterested.Split(","))
                                                {
                                                    <span class="badge bg-secondary me-1">@course.Trim()</span>
                                                }
                                            }
                                        </td>
                                        <td>
                                            @if (user.InterestedInCertification)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">No</span>
                                            }
                                        </td>
                                        <td>
                                            <small>@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
